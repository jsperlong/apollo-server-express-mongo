mixin head(title)
    head
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        title=title
        meta(name='viewport', content='width=device-width, initial-scale=1.0')

mixin tablesix
    table(align='center', border='0', cellpadding='0', cellspacing='0', width='600', style='border: 1px solid #cccccc; border-collapse: collapse;')
        tbody
            tr
                if block
                    block


mixin tablesec
    table(border='0', cellpadding='0', cellspacing='0', width='100%')
        tbody
            tr
                if block
                    block

mixin headerimg
    td(align='center', bgcolor='#70bbd9', style='padding: 40px 0 30px 0; color: #153643; font-size: 28px; font-weight: bold; font-family: Arial, sans-serif;')
        img(src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/210284/h1.gif', alt='Creating Email Magic', width='300', height='230', style='display: block;')

mixin headerh1(appname)
    td(align='center', bgcolor='#70bbd9', style='padding: 10px 0 5px 0; color: #153643; font-size: 28px; font-weight: bold; font-family: Arial, sans-serif;')
        h1(style='padding: 0; margin:5px;')=appname


mixin title(text)
    td(style='color: #153643; font-family: Arial, sans-serif; font-size: 24px;')
    b=text

mixin description(text)
    tr
        td(style='padding: 5px 0 10px 0; color: #153643; font-family: Arial, sans-serif; font-size: 16px; line-height: 20px;')=text


